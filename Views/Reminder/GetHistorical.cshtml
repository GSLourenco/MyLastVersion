<script>
    function DetailHistoricalReminder(id, contact) {
        $.ajax({
            type: 'GET',
            url: '/Reminder/GetHistoricalDetailedReminder',
            data: {
                'idx': id,
            },
            success: function (data) {
                $('#editdiv').html(data);
            },
            statusCode: {
                404: function () {
                    $(this).remove();
                }
            }
        })
        ;
    }
</script>