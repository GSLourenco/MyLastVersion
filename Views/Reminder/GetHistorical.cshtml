<body>
    <div id ="links" class="col-md-2">
        @foreach (var reminder in Model)
        {
            <a  onClick="DetailHistoricalReminder(@reminder.id)">Lembrete : @reminder.title</a>
        }
    </div>
    <div id="editdiv" class="col-md-10"></div>
</body>
